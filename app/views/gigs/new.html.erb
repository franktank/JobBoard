<div class="contents">
  <section id="post">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <h3 class="sub-heading">Post a gig</h3>
          <div class="content-inner-detail">
            <%= form_for @gig do |f| %>
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control input-lg" %>
                  <small class="help-block">Name of your gig.</small>
                  </div>
                </div>
                <div class="col-xs-12 col-md-6">
                  <div class="form-group">
                    <%= f.label :budget %>
                    <%= f.text_field :budget, class: "form-control input-lg" %>
                  <small class="help-block">ex: $1000</small>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <div class="form-group">
                    <%= f.label :location %>
                    <%= f.text_field :location, class: "form-control input-lg" %>
                  <small class="help-block">[Orlando, NYC, Portland,...]</small>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_field :description, class: "form-control", rows: 10 %>
                  <small class="help-block">Tell us about your gig</small>
                  </div>
                </div>
              </div>
              <br>
              <%= f.submit class: "btn btn-primary input-lg" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
